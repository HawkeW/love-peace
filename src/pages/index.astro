---
import ParallaxHero from "../components/ParallaxHero.astro";
import EnvelopeSeal from "../components/EnvelopeSeal.astro";
import SpringReveal from "../components/SpringReveal.astro";
import FallingImageEffect from "../components/effects/FallingImageEffect.astro";
import RsvpModal from "../components/RsvpModal.astro";
import WechatShare from "../components/WechatShare.astro";
import fs from "fs";
import path from "path";

interface Item {
	src: string;
	alt: string;
}

function cleanLine(s: string) {
	return s.replace(/^#+\s*/, "").replace(/\s+$/, "");
}

function getTitleFromMd(md: string) {
	const lines = md.split(/\r?\n/).filter(Boolean);
	const titleLine =
		lines.find((l) => l.trim().startsWith("#")) ?? lines[0] ?? "";
	return cleanLine(titleLine).slice(0, 60);
}

const weddingDir = path.resolve(process.cwd(), "public/gallery/choose");
const descDir = path.resolve(process.cwd(), "public/descs");
const images = fs
	.readdirSync(weddingDir)
	.filter((f) => /\.(jpe?g|png|webp)$/i.test(f));

const items: Item[] = images.map((f) => {
	const base = f.replace(/\.(jpe?g|png|webp)$/i, "");
	const mdPath = path.join(descDir, `${base}.md`);
	let title = base;
	if (fs.existsSync(mdPath)) {
		const md = fs.readFileSync(mdPath, "utf8");
		title = getTitleFromMd(md) || base;
	}
	return {
		src: `/gallery/choose/${f}`,
		alt: title,
	};
});

// Hero image - use first image
const heroImage = "/gallery/hero/10.jpeg";

// Wedding details
const coupleName = "王浩 & 何晓雅";
const weddingDate = "2026年02月11日";
const eventDate = "二零二六年 二月 十一日";
const eventDate2 = "农历腊月24日";
const eventTime = "中午 11:08";
const eventVenue = "信阳 · 艳阳天酒店";
const eventAddress = "信阳市平桥区新六大街8号";

// Share config
const siteUrl = "https://shae-hughe-weddi.oncew.com";
const shareImage = new URL(heroImage, siteUrl).href;
const shareDesc = "诚挚邀请您参加我们的婚礼，见证我们的幸福时刻。";
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>喜宴邀请函 - {coupleName}</title>
		<meta name="description" content={shareDesc} />

		<!-- Open Graph / Wechat Share -->
		<meta property="og:title" content={`喜宴邀请函 - ${coupleName}`} />
		<meta property="og:description" content={shareDesc} />
		<meta property="og:image" content={shareImage} />
		<meta property="og:url" content={siteUrl} />
		<meta property="og:type" content="website" />

		<!-- Schema.org for Google / Wechat legacy -->
		<meta itemprop="name" content={`喜宴邀请函 - ${coupleName}`} />
		<meta itemprop="description" content={shareDesc} />
		<meta itemprop="image" content={shareImage} />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600&family=Noto+Serif+SC:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>

		<!-- Lenis Smooth Scroll -->
		<link
			rel="stylesheet"
			href="https://unpkg.com/lenis@1.3.8/dist/lenis.css"
		/>
	</head>

	<body>
		<!-- Section 1: Cinematic Hero -->
		<ParallaxHero
			backgroundImage={heroImage}
			title={coupleName}
			date={weddingDate}
		>
			<EnvelopeSeal />
		</ParallaxHero>

		<!-- Section 2: Invitation Message -->
		<section class="invitation-message">
			<div class="message-container">
				<SpringReveal delay={0}>
					<div class="gold-line"></div>
				</SpringReveal>

				<SpringReveal delay={0.1}>
					<h2 class="message-title">喜宴邀请</h2>
				</SpringReveal>

				<SpringReveal delay={0.2}>
					<p class="message-text">
						感谢一路相伴的亲朋好友<br />
						在这个特别的日子里<br />
						我们想与您一同分享这份幸福
					</p>
				</SpringReveal>

				<SpringReveal delay={0.3}>
					<p class="message-highlight">
						诚挚邀请您前来<br />
						与我们共享这份喜悦
					</p>
				</SpringReveal>

				<SpringReveal delay={0.4}>
					<div class="gold-line"></div>
				</SpringReveal>
			</div>
		</section>

		<!-- Section 3: Waterfall Gallery -->
		<section class="gallery-section">
			<SpringReveal>
				<h2 class="section-title">我们的瞬间</h2>
				<p class="section-subtitle">点击放大 · 碰撞回忆</p>
			</SpringReveal>

			<FallingImageEffect
				class="falling-image-wrapper"
				images={items.map((i) => i.src)}
				imageSize={100}
				imageSizeRange="80-120"
				trigger="scroll"
				borderRadius={10}
				gravity={0.8}
				restitution={0.7}
				friction={0.2}
			/>
		</section>

		<!-- Section 4: Event Details -->
		<section class="event-details">
			<div class="details-container">
				<SpringReveal>
					<h2 class="details-title">宴会详情</h2>
				</SpringReveal>

				<div class="details-grid">
					<SpringReveal delay={0.1}>
						<div class="detail-card">
							<div class="detail-icon">
								<svg
									width="32"
									height="32"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="1.5"
								>
									<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
									<line x1="16" y1="2" x2="16" y2="6"></line>
									<line x1="8" y1="2" x2="8" y2="6"></line>
									<line x1="3" y1="10" x2="21" y2="10"></line>
								</svg>
							</div>
							<h3 class="detail-label">日期</h3>
							<p class="detail-value">{eventDate}</p>
							<p class="detail-value">{eventDate2}</p>
						</div>
					</SpringReveal>

					<SpringReveal delay={0.2}>
						<div class="detail-card">
							<div class="detail-icon">
								<svg
									width="32"
									height="32"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="1.5"
								>
									<circle cx="12" cy="12" r="10"></circle>
									<polyline points="12,6 12,12 16,14"></polyline>
								</svg>
							</div>
							<h3 class="detail-label">时间</h3>
							<p class="detail-value">{eventTime}</p>
						</div>
					</SpringReveal>

					<SpringReveal delay={0.3}>
						<div class="detail-card">
							<div class="detail-icon">
								<svg
									width="32"
									height="32"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="1.5"
								>
									<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
									></path>
									<circle cx="12" cy="10" r="3"></circle>
								</svg>
							</div>
							<h3 class="detail-label">地点</h3>
							<p class="detail-value">{eventVenue}</p>
							<p class="detail-address">{eventAddress}</p>
						</div>
					</SpringReveal>
				</div>
			</div>
		</section>

		<!-- Section 5: RSVP Footer -->
		<footer class="rsvp-footer">
			<SpringReveal>
				<div class="footer-content">
					<p class="footer-message">期待与您共度这美好时刻</p>
					<button
						id="rsvp-button"
						type="button"
						onclick="window.openRsvpModal()"
						class="rsvp-button"
						style="display: none;"
					>
						<span>确认出席</span>
						<svg
							width="20"
							height="20"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
						>
							<line x1="5" y1="12" x2="19" y2="12"></line>
							<polyline points="12,5 19,12 12,19"></polyline>
						</svg>
					</button>
					<p class="footer-signature">Love & Peace</p>
				</div>
			</SpringReveal>
		</footer>

		<RsvpModal />

		<WechatShare
			title={`喜宴邀请函 - ${coupleName}`}
			desc={shareDesc}
			imgUrl={shareImage}
			link={siteUrl}
		/>

		<!-- Lenis Smooth Scroll Script -->
		<script>
			import Lenis from "lenis";

			const lenis = new Lenis({
				lerp: 0.08,
				duration: 1.5,
				smoothWheel: true,
				syncTouch: false,
				wheelMultiplier: 0.8,
				autoRaf: false,
			});

			function raf(time: number) {
				lenis.raf(time);
				requestAnimationFrame(raf);
			}

			requestAnimationFrame(raf);

			// Debug mode check
			const urlParams = new URLSearchParams(window.location.search);
			if (urlParams.has("showDebug")) {
				const rsvpBtn = document.getElementById("rsvp-button");
				if (rsvpBtn) {
					rsvpBtn.style.display = "";
				}
			}
		</script>
	</body>
</html>

<style is:global>
	/* CSS Variables - Elegant Neutral Color Scheme */
	:root {
		/* Base */
		--bg-primary: #0a0a0a;
		--bg-secondary: #141414;
		--text-primary: #fafafa;
		--text-secondary: #a0a0a0;

		/* Accents */
		--gold: #c9a962;
		--gold-light: #e8d5a3;
		--gold-glow: rgba(201, 169, 98, 0.15);

		/* Borders */
		--border-subtle: rgba(255, 255, 255, 0.08);

		/* Spring easing */
		--spring-bounce: cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: "Noto Serif SC", "Songti SC", Georgia, serif;
		background-color: var(--bg-primary);
		color: var(--text-primary);
		line-height: 1.6;
		overflow-x: hidden;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	/* Selection styling */
	::selection {
		background: var(--gold);
		color: var(--bg-primary);
	}
</style>

<style>
	/* Invitation Message Section */
	.invitation-message {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 80px 24px;
		background: var(--bg-primary);
	}

	.message-container {
		max-width: 600px;
		text-align: center;
	}

	.gold-line {
		width: 60px;
		height: 1px;
		background: linear-gradient(90deg, transparent, var(--gold), transparent);
		margin: 0 auto 40px;
	}

	.message-title {
		font-family: "Playfair Display", "Noto Serif SC", Georgia, serif;
		font-size: clamp(1.75rem, 5vw, 2.5rem);
		font-weight: 500;
		letter-spacing: 0.15em;
		color: var(--text-primary);
		margin-bottom: 32px;
	}

	.message-text {
		font-size: clamp(1rem, 3vw, 1.125rem);
		line-height: 2.2;
		color: var(--text-secondary);
		margin-bottom: 32px;
		letter-spacing: 0.05em;
	}

	.message-highlight {
		font-size: clamp(1.125rem, 3.5vw, 1.25rem);
		line-height: 2;
		color: var(--gold-light);
		margin-bottom: 40px;
		letter-spacing: 0.08em;
	}

	/* Gallery Section */
	.gallery-section {
		background: var(--bg-secondary);
		padding-top: 80px;
		display: flex;
		flex-direction: column;
		height: 100vh;
	}

	.falling-image-wrapper {
		flex: 1;
		min-height: 0; /* Necessary for flex child scrolling/sizing behavior */
	}

	.section-title {
		font-family: "Playfair Display", "Noto Serif SC", Georgia, serif;
		font-size: clamp(1.5rem, 4vw, 2rem);
		font-weight: 500;
		letter-spacing: 0.1em;
		text-align: center;
		margin-bottom: 12px;
	}

	.section-subtitle {
		font-size: 1rem;
		color: var(--text-secondary);
		text-align: center;
		letter-spacing: 0.15em;
		margin-bottom: 48px;
	}

	/* Event Details Section */
	.event-details {
		padding: 100px 24px;
		background: var(--bg-primary);
	}

	.details-container {
		max-width: 1000px;
		margin: 0 auto;
	}

	.details-title {
		font-family: "Playfair Display", "Noto Serif SC", Georgia, serif;
		font-size: clamp(1.5rem, 4vw, 2rem);
		font-weight: 500;
		letter-spacing: 0.1em;
		text-align: center;
		margin-bottom: 60px;
	}

	.details-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 32px;
	}

	.detail-card {
		text-align: center;
		padding: 40px 24px;
		background: var(--bg-secondary);
		border: 1px solid var(--border-subtle);
		border-radius: 16px;
		transition:
			transform 0.4s var(--spring-bounce),
			box-shadow 0.4s ease,
			border-color 0.3s ease;
	}

	.detail-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
		border-color: var(--gold-glow);
	}

	.detail-icon {
		color: var(--gold);
		margin-bottom: 20px;
	}

	.detail-icon svg {
		display: inline-block;
	}

	.detail-label {
		font-size: 0.875rem;
		font-weight: 400;
		color: var(--text-secondary);
		letter-spacing: 0.2em;
		text-transform: uppercase;
		margin-bottom: 12px;
	}

	.detail-value {
		font-family: "Playfair Display", "Noto Serif SC", Georgia, serif;
		font-size: 1.25rem;
		font-weight: 500;
		color: var(--text-primary);
		letter-spacing: 0.05em;
	}

	.detail-address {
		font-size: 0.875rem;
		color: var(--text-secondary);
		margin-top: 8px;
		letter-spacing: 0.02em;
	}

	/* RSVP Footer */
	.rsvp-footer {
		padding: 100px 24px;
		background: linear-gradient(
			to bottom,
			var(--bg-primary),
			var(--bg-secondary)
		);
		text-align: center;
	}

	.footer-content {
		max-width: 500px;
		margin: 0 auto;
	}

	.footer-message {
		font-size: clamp(1.25rem, 4vw, 1.5rem);
		color: var(--text-secondary);
		margin-bottom: 40px;
		letter-spacing: 0.1em;
	}

	.rsvp-button {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		padding: 16px 40px;
		background: linear-gradient(135deg, var(--gold), var(--gold-light));
		color: var(--bg-primary);
		text-decoration: none;
		font-size: 1rem;
		font-weight: 600;
		letter-spacing: 0.15em;
		border-radius: 999px;
		transition:
			transform 0.4s var(--spring-bounce),
			box-shadow 0.4s ease;
		box-shadow: 0 4px 20px var(--gold-glow);
	}

	.rsvp-button:hover {
		transform: translateY(-4px) scale(1.02);
		box-shadow: 0 8px 30px rgba(201, 169, 98, 0.3);
	}

	.rsvp-button svg {
		transition: transform 0.3s ease;
	}

	.rsvp-button:hover svg {
		transform: translateX(4px);
	}

	.footer-signature {
		margin-top: 60px;
		font-family: "Playfair Display", Georgia, serif;
		font-size: 1.125rem;
		font-style: italic;
		color: var(--gold);
		letter-spacing: 0.2em;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.invitation-message {
			padding: 60px 20px;
			min-height: auto;
		}

		.gold-line {
			margin-bottom: 32px;
		}

		.message-title {
			margin-bottom: 24px;
		}

		.message-text {
			margin-bottom: 24px;
		}

		.message-highlight {
			margin-bottom: 32px;
		}

		.gallery-section {
			padding-top: 60px;
		}

		.section-subtitle {
			margin-bottom: 32px;
		}

		.event-details {
			padding: 60px 20px;
		}

		.details-title {
			margin-bottom: 40px;
		}

		.details-grid {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.detail-card {
			padding: 32px 20px;
		}

		.rsvp-footer {
			padding: 60px 20px;
		}

		.footer-message {
			margin-bottom: 32px;
		}

		.rsvp-button {
			padding: 14px 32px;
		}

		.footer-signature {
			margin-top: 40px;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.detail-card {
			transition: none;
		}

		.rsvp-button {
			transition: none;
		}
	}
</style>
