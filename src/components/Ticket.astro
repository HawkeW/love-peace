---
interface Props {
  date?: string;
  time?: string;
  location?: string;
  locationDesc?: string;
  ticketNo?: string;
}

const { 
  date = "2026.02.11", 
  time = "12:00", 
  location = "信阳市 艳阳天酒店",
  locationDesc = "信阳市平桥区新六大街8号",
  ticketNo = "NO.001"
} = Astro.props;
---

<div class="ticket-container">
  <div class="ticket">
    <div class="ticket-content">
      <div class="header">
        <span class="brand">Love & Peace</span>
        <span class="type">婚礼邀请函</span>
      </div>
      
      <div class="main-info">
        <div class="names">
          <div class="groom">王浩</div>
          <div class="divider">&</div>
          <div class="bride">何晓雅</div>
        </div>
        
        <div class="details">
          <div class="row">
            <div class="label">DATE</div>
            <div class="value">{date}</div>
          </div>
          <div class="row">
            <div class="label">TIME</div>
            <div class="value">{time}</div>
          </div>
          <div class="row full">
            <div class="label">LOCATION</div>
            <div class="value">{location}</div>
            <div class="sub-value">{locationDesc}</div>
          </div>
        </div>
      </div>

      <div class="footer">
        <div class="ticket-no">{ticketNo}</div>
        <div class="barcode">
          <!-- Simple CSS barcode representation -->
          <div class="bars"></div>
        </div>
      </div>
    </div>
    
    <!-- Cutout decoration -->
    <div class="notch left"></div>
    <div class="notch right"></div>
  </div>
</div>

<style>
  .ticket-container {
    padding: var(--space-8) var(--space-4);
    display: flex;
    justify-content: center;
    width: 100%;
    background: var(--color-bg-light);
    box-sizing: border-box; /* Ensure padding doesn't overflow */
  }

  .ticket {
    position: relative;
    width: 100%;
    max-width: 400px;
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: var(--space-6) var(--space-4);
    color: var(--color-text-main);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    overflow: hidden;
    box-sizing: border-box; /* Ensure padding doesn't overflow */
    clip-path: inset(0 round 16px);
  }

  .ticket-content {
    position: relative;
    z-index: 2;
    border: 1px solid rgba(212, 175, 55, 0.3); /* Gold border */
    padding: var(--space-4);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px dashed rgba(255, 255, 255, 0.2);
    padding-bottom: var(--space-2);
    font-size: 0.8rem;
    opacity: 0.8;
    letter-spacing: 0.05em;
  }

  .brand {
    font-family: var(--font-serif);
    color: var(--color-primary);
    font-weight: 600;
  }

  .main-info {
    text-align: center;
  }

  .names {
    font-family: var(--font-serif);
    font-size: 1.8rem;
    color: var(--color-primary);
    margin-bottom: var(--space-6);
    line-height: 1.2;
  }

  .divider {
    font-size: 1rem;
    opacity: 0.6;
    margin: var(--space-1) 0;
    color: var(--color-text-main);
  }

  .details {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    text-align: left;
  }

  .row {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .row.full {
    margin-top: var(--space-2);
  }

  .label {
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    opacity: 0.5;
    text-transform: uppercase;
  }

  .value {
    font-size: 1rem;
    font-weight: 500;
  }
  
  .sub-value {
    font-size: 0.85rem;
    opacity: 0.7;
    margin-top: 2px;
  }

  .footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    border-top: 1px dashed rgba(255, 255, 255, 0.2);
    padding-top: var(--space-4);
  }

  .ticket-no {
    font-family: monospace;
    opacity: 0.6;
    font-size: 0.9rem;
  }

  .barcode {
    height: 30px;
    width: 80px;
    opacity: 0.8;
  }
  
  .bars {
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      to right,
      #fff,
      #fff 2px,
      transparent 2px,
      transparent 4px,
      #fff 4px,
      #fff 5px,
      transparent 5px,
      transparent 8px
    );
  }

  /* Notches */
  .notch {
    position: absolute;
    top: 70%; /* Position of the tear line */
    width: 24px;
    height: 24px;
    background: var(--color-bg-light); /* Match page background */
    border-radius: 50%;
    z-index: 3;
  }

  .notch.left {
    left: -12px;
  }

  .notch.right {
    right: -12px;
  }

  /* Tear line */
  .ticket::after {
    content: '';
    position: absolute;
    top: 70%;
    left: 12px;
    right: 12px;
    height: 1px;
    border-top: 2px dashed rgba(255, 255, 255, 0.1);
    z-index: 1;
  }
</style>
