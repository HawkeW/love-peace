---
interface Props {
  title?: string;
  subtitle?: string;
  autoHide?: boolean;
  autoHideDelay?: number;
}

const {
  title = "SIENA",
  subtitle = "FILM FOUNDATION",
  autoHide = false,
  autoHideDelay = 4500,
} = Astro.props;

const STRIPE_COUNT = 12;
---

<div class="siena-loader" id="sienaLoader" data-auto-hide={autoHide} data-auto-hide-delay={autoHideDelay}>
  <!-- Black background base (will be revealed) -->
  <div class="base-black"></div>

  <!-- White overlay stripes - each wipes from left to right simultaneously -->
  <div class="stripe-container" id="stripeContainer">
    {
      Array.from({ length: STRIPE_COUNT }).map((_, i) => (
        <div class="stripe" style={`--index: ${i}`} />
      ))
    }
  </div>

  <!-- Title - always white, becomes visible as background turns black -->
  <div class="title-container">
    <h1 class="main-title">{title}</h1>
    <p class="subtitle">{subtitle}</p>
  </div>
</div>

<style>
  .siena-loader {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    font-family: "Cormorant Garamond", "Times New Roman", serif;
    z-index: 9999;
  }

  /* Black background - revealed when white stripes wipe away */
  .base-black {
    position: absolute;
    inset: 0;
    background: black;
    z-index: 0;
  }

  /* White stripe container */
  .stripe-container {
    position: absolute;
    inset: 0;
    display: flex;
    z-index: 10;
  }

  /* Each stripe wipes from left to right using clip-path */
  .stripe {
    flex: 1;
    height: 100%;
    background: white;
    clip-path: inset(0 0 0 0);
    animation: wipeStripe 2s ease-in-out forwards;
    animation-delay: 1s;
  }

  @keyframes wipeStripe {
    0% {
      clip-path: inset(0 0 0 0);
    }
    100% {
      clip-path: inset(0 0 0 100%);
    }
  }

  /* Title container - centered, always white text */
  .title-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 20;
    text-align: center;
    color: white;
  }

  .main-title {
    font-size: clamp(3rem, 12vw, 8rem);
    font-weight: 300;
    letter-spacing: 0.15em;
    margin: 0;
    padding-right: 0.15em;
  }

  .subtitle {
    font-size: clamp(0.9rem, 2.5vw, 1.4rem);
    font-weight: 300;
    letter-spacing: 0.3em;
    margin: 1.5rem 0 0 0;
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 3s;
    padding-right: 0.3em;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .siena-loader.hidden {
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const loader = document.getElementById("sienaLoader");
    
    if (loader) {
      const autoHide = loader.dataset.autoHide === "true";
      const autoHideDelay = parseInt(loader.dataset.autoHideDelay || "4500", 10);
      
      if (autoHide) {
        setTimeout(() => {
          loader.classList.add("hidden");
          window.dispatchEvent(
            new CustomEvent("siena-loader-complete", {
              detail: { loader },
            })
          );
        }, autoHideDelay);
      }
    }
  });
</script>
