---
interface Props {
  title?: string;
  subtitle?: string;
  enterText?: string;
  onEnter?: string;
}

const {
  title = "SIENA",
  subtitle = "FILM FOUNDATION",
  enterText = "ENTER",
  onEnter = "#",
} = Astro.props;

const STRIPE_COUNT = 12;
---

<div class="siena-loader" id="sienaLoader">
  <!-- Black background base (will be revealed) -->
  <div class="base-black"></div>
  
  <!-- White overlay stripes - each wipes from left to right simultaneously -->
  <div class="stripe-container" id="stripeContainer">
    {Array.from({ length: STRIPE_COUNT }).map((_, i) => (
      <div class="stripe" style={`--index: ${i}`}></div>
    ))}
  </div>

  <!-- Title - always white, becomes visible as background turns black -->
  <div class="title-container">
    <h1 class="main-title">{title}</h1>
    <p class="subtitle">{subtitle}</p>
    <a href={onEnter} class="enter-button" id="enterButton">
      {enterText}
    </a>
  </div>
</div>

<style>
  .siena-loader {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    font-family: "Cormorant Garamond", "Times New Roman", serif;
  }

  /* Black background - revealed when white stripes wipe away */
  .base-black {
    position: absolute;
    inset: 0;
    background: black;
    z-index: 0;
  }

  /* White stripe container */
  .stripe-container {
    position: absolute;
    inset: 0;
    display: flex;
    z-index: 10;
  }

  /* Each stripe wipes from left to right using clip-path */
  .stripe {
    flex: 1;
    height: 100%;
    background: white;
    clip-path: inset(0 0 0 0);
    animation: wipeStripe 2s ease-in-out forwards;
    animation-delay: 1s;
  }

  @keyframes wipeStripe {
    0% {
      clip-path: inset(0 0 0 0);
    }
    100% {
      clip-path: inset(0 0 0 100%);
    }
  }

  /* Title container - centered, always white text */
  .title-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 20;
    text-align: center;
    color: white;
  }

  .main-title {
    font-size: clamp(3rem, 15vw, 10rem);
    font-weight: 300;
    letter-spacing: 0.4em;
    margin: 0;
    text-transform: uppercase;
    padding-right: 0.4em; /* Compensate for letter-spacing */
  }

  .subtitle {
    font-size: clamp(0.8rem, 2vw, 1.2rem);
    font-weight: 300;
    letter-spacing: 0.5em;
    margin: 1rem 0 0 0;
    opacity: 0;
    text-transform: uppercase;
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 3s;
    padding-right: 0.5em;
  }

  .enter-button {
    display: inline-block;
    margin-top: 3rem;
    padding: 1rem 3rem;
    border: 1px solid white;
    color: white;
    text-decoration: none;
    font-size: clamp(0.7rem, 1.5vw, 0.9rem);
    letter-spacing: 0.4em;
    text-transform: uppercase;
    background: transparent;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 3.3s;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .enter-button:hover {
    background: white;
    color: black;
    transform: scale(1.05);
  }

  .enter-button:active {
    transform: scale(0.98);
  }

  .siena-loader.hidden {
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.5s ease-out;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const enterButton = document.getElementById("enterButton");
    const loader = document.getElementById("sienaLoader");

    if (enterButton && loader) {
      enterButton.addEventListener("click", (e) => {
        const href = enterButton.getAttribute("href");

        if (href === "#") {
          e.preventDefault();
          loader.classList.add("hidden");
          window.dispatchEvent(
            new CustomEvent("siena-enter", {
              detail: { loader },
            })
          );
        }
      });
    }
  });
</script>
