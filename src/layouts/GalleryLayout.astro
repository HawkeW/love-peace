---
export interface Props {
	title?: string;
}

const { title = "Gallery" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="https://unpkg.com/lenis@1.3.8/dist/lenis.css">
	</head>
	<body>
		<slot />
		<script>
			import Lenis from 'lenis';
			
			// Initialize Lenis with custom settings for smooth artistic scrolling
			const lenis = new Lenis({
				lerp: 0.05,
				duration: 2.5,
				smoothWheel: true,
				syncTouch: false,
				touchMultiplier: 1.5,
				wheelMultiplier: 0.8,
				autoRaf: false
			});
			
			// Custom RAF loop for better control
			function raf(time) {
				lenis.raf(time);
				requestAnimationFrame(raf);
			}
			
			requestAnimationFrame(raf);
			
			// Optional: Listen for scroll events
			lenis.on('scroll', (e) => {
				// console.log('Scroll progress:', e.progress);
			});
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		background-color: #000;
		color: #fff;
		overflow-x: hidden;
	}
	
	* {
		box-sizing: border-box;
	}
</style>